---
const { siteTitle = "Olcan E. Brem" } = Astro.props;
import HeaderMenu from "@/components/HeaderMenu";
import ThemeToggle from "@/components/ThemeToggle";
---
<script>
  let isScrolled = false;
  if (typeof window !== 'undefined') {
    window.addEventListener('scroll', () => {
      const scrollY = window.scrollY;
      if (scrollY > 10 && !isScrolled) {
        document.body.classList.add('header-scrolled');
        isScrolled = true;
      } else if (scrollY <= 10 && isScrolled) {
        document.body.classList.remove('header-scrolled');
        isScrolled = false;
      }
    });
  }
</script>
<style>
.header-float {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 50;
  transition: box-shadow 0.3s, background 0.3s;
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(6px);
  box-shadow: 0 2px 24px 0 rgba(0,0,0,0.07);
}
.header-inner {
  transition: max-width 0.4s cubic-bezier(.4,0,.2,1), background 0.3s;
  margin: 0 auto;
  max-width: 100vw;
  border-radius: 2.5rem;
  border: 2px solid #e5e7eb;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  background: rgba(255,255,255,0.92);
  padding: 0.5rem 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
body.header-scrolled .header-inner {
  max-width: 1280px;
  border-radius: 2.5rem;
  border: 2px solid #d1d5db;
  box-shadow: 0 6px 32px 0 rgba(0,0,0,0.08);
  background: rgba(255,255,255,0.98);
}
.circle-border {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  border: 2px solid #d1d5db;
  background: #fff;
  z-index: 1;
}
.circle-border.left {
  left: -1.5rem;
}
.circle-border.right {
  right: -1.5rem;
}
</style>
<header class="header-float">
  <div class="header-inner">
    <a href="/" class="text-xl font-bold relative z-10">{siteTitle}</a>
    <HeaderMenu client:load />
    <ThemeToggle client:visible />
  </div>
</header>
