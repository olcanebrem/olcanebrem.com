---
// Astro bileşeni içinde
const { siteTitle = "Olcan E. Brem" } = Astro.props;
import HeaderMenu from "@/components/HeaderMenu";
import ThemeToggle from "@/components/ThemeToggle";
import SignButton from "@/components/SignButton.tsx";
---

<script>
  let isScrolled = false;

  // Script kısmında:
if (typeof window !== 'undefined') {
  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    const header = document.querySelector('#site-header');
    const inner = document.querySelector('.header-inner');

    if (scrollY > 10 && !isScrolled) {
      header?.classList.add('scrolled');
      inner?.classList.add('scrolled');
      isScrolled = true;
    } else if (scrollY <= 10 && isScrolled) {
      header?.classList.remove('scrolled');
      inner?.classList.remove('scrolled');
      isScrolled = false;
    }
  });
}

</script>

<header id="site-header"
  class="fixed left-0 w-full z-50 transition-all duration-300 ease-in-out"
>
  <div
    class="header-inner mx-auto max-w-full transition-[border-radius,max-width] duration-700 ease-[cubic-bezier(.4,0,.2,1)] rounded-none dark:border-gray-600 shadow-md bg-white/90 dark:bg-zinc-800/90 p-2 px-8 flex items-center justify-between relative scrolled:rounded-2xl"
  >
    <a href="/" class="text-xl font-bold relative z-10 text-black dark:text-white">{siteTitle}</a>
    <HeaderMenu client:load />
    <div class="flex items-center space-x-2">
      <SignButton client:load />
      <ThemeToggle client:load />
    </div>
  </div>
</header>


<style>
/* CSS içinde */
header {
  top: 0;
}
header.scrolled {
  top: 10px;
}
.header-inner {
  border-radius: 0;
  transition: border-radius 200ms cubic-bezier(0.4, 0, 0.2, 1), max-width 200ms cubic-bezier(0.2, 0, 0.2, 1);
}
.header-inner.scrolled {
  max-width: 880px;
  border-radius: 2rem;
}

</style>
